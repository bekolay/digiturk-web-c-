@model IEnumerable<digiturkveri.basvuru>

@{
    ViewBag.Title = "Basvurular";
}

@if (Request.IsAuthenticated)
{

    <section id="blog-section">

        <div class="content-wrapper">

            <div class="content-dimmer"></div>
            <header class="page-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
                            <br />
                            <h3 class="page-header-heading"><span class="typcn typcn-th-small-outline page-header-heading-icon"></span>Başvurular</h3>
                            <hr />
                        </div>
                    </div>
                </div>
