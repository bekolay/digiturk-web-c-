                            <th>Paket İsmi</th>
                            <th>İp Adres</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.basvuruadisoyadi)</td>
                            <td>@Html.DisplayFor(modelItem => item.basvurutel)</td>
                            <td>@Html.DisplayFor(modelItem => item.paket.padi)</td>
                            <td>@Html.DisplayFor(modelItem => item.basipadres)</td>
                            <td>
                                @Html.ActionLink("Düzenle", "Details", new { id = item.basvuruid })
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>

