@model digiturkveri.kullanici

@{
    ViewBag.Title = "Düzenle";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Düzenle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.kid)
        @Html.HiddenFor(model => model.kolusturmatarih)

        <div class="form-group">
            <label for="inputName">Adı Soyadı</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.kadi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kadi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="inputName">Şifre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ksifre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ksifre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="inputName">Şifre Tekrar</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ksifretekrar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ksifretekrar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="inputName">Aktif Mi</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.kaktifmi)
                    @Html.ValidationMessageFor(model => model.kaktifmi, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="inputName">Telefon Numarası</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.kemail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kemail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Gel", "Index")
</div>
