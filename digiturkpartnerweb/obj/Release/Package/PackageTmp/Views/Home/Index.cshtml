@{
    ViewBag.Title = "Ana Sayfa";
}



<section class="slider-content d-none d-lg-block">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="sliderWrap">
                    <div class="sliderArea" style="position:absolute; top:0px; z-index:0; width:100%; height:555px;">
                        <div class="banner" data-startHeight="555">
                            <ul>
                                <!-- first item -->
                                @Html.Partial("_spor", digiturkpartnerweb.Models.Data.spor)
                                <!-- second item -->
                                @Html.Partial("_dizi", digiturkpartnerweb.Models.Data.taraftar)
                                <!-- third item -->
                                @Html.Partial("_film", digiturkpartnerweb.Models.Data.dizi)
                            </ul>
                        </div>
                        <div class="campaign-area">
                            <div class="left-radius"></div>
                            <div class="right-radius"></div>
                            <div class="all-campaign">
                                <div class="campaign-outer">
                                    @Html.Partial("_spor1", digiturkpartnerweb.Models.Data.spor)
                                </div>
                                @Html.Partial("_dizi1", digiturkpartnerweb.Models.Data.taraftar)
                                @Html.Partial("_film1", digiturkpartnerweb.Models.Data.dizi)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mobile-slider-content d-block d-lg-none">
    <div class="mobile-sliderWrap">
        <div class="mobile-sliderArea d-none" style="position:relative;">
            <div class="mobile-banner">
                <ul>
                    @Html.Partial("_mobildizi", digiturkpartnerweb.Models.Data.spor)
                    @Html.Partial("_mobilspor", digiturkpartnerweb.Models.Data.taraftar)
                    @Html.Partial("_mobilfilm", digiturkpartnerweb.Models.Data.dizi)
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="divider light-grey-bg">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="black-color gotham-bold" data-animation="fadeInDown" data-animation-delay="300">Digiturk’ten Yeni &#220;yeliklere &#214;zel Fırsat Paketler!</h2>
                <p class="f-15 ln-21 gilroy-l black-color mt-20 mb-30 d-block fw-900 subtext" data-animation="fadeInDown" data-animation-delay="300">
                    Yeni kanallar, yepyeni i&#231;erikler, modern st&#252;dyolar ve &#252;nl&#252; isimlerle Digiturk şimdi &#231;ok daha g&#252;&#231;l&#252;. Futboldan tenise ve basketbola T&#252;rkiye ve d&#252;nyadaki spor karşılaşmaları, aksiyondan komediye her duyguya hitap eden filmler, sevilen yabancı diziler ve ulusal kanallar Digiturk’te!
                </p>
            </div>
        </div>
        <div class="row">

            @Html.Partial("_anasayfa", digiturkpartnerweb.Models.Data.anasayfa)
        </div>
    </div>
</section>


<section class="inner-form purple-bg  ">
    <div class="container">
        <form action="/tumpaketler/anasayfadan" method="post" contact-form contactForm">
            <div class="row">
                <div class="col-lg-4" data-animation="fadeInLeft" data-animation-delay="300">
                    <h4 class="f-24 white-color gotham-bold">Sizi Arayalım</h4>
                    <p class="f-16 white-color gilroy-l mt-20 d-block ln-24">
                        Kampanyalarımız ve t&#252;m gelişmeler hakkında detaylı bilgi almak i&#231;in formu doldurun, hemen sizi arayalım.
                        Potansiyel Müşteri Aydınlatma metni için <a class="click-it" target="_blank" href="Assets/pdf/digiturk_kvkk.pdf">tıklayın.</a>
                    </p>
                </div>
                <input type="hidden" name="ipadresim" id="ipadresim" value="@Request.UserHostAddress" />

                <div class="col-lg-3" data-animation="fadeInUp" data-animation-delay="300">
                    <label class="f-15 gilroy-eb white-color input-label" for="name">AD SOYAD</label>
                    <input type="text" id="kelime" name="kelime" class="form-control input-md gilroy-l br-4" placeholder="Ad ve soyadınızı girin" autocomplete="off" required />
                </div>
                <div class="col-lg-3" data-animation="fadeInUp" data-animation-delay="300">
                    <label class="f-15 gilroy-eb white-color input-label" for="phone">TELEFON</label>
                    <input type="text" id="tele" name="tele" class="form-control phone-mask gilroy-l br-4" placeholder="(5__) ___ __ __" autocomplete="off" required />
                </div>
                <input type="text" id="ipadresim" name="ipadresim" class="form-control input-md gilroy-l br-4" hidden placeholder="@Request.UserHostAddress" autocomplete="off" required />
                <div class="col-lg-2" data-animation="fadeInUp" data-animation-delay="300">
                    <a class="br-30 gilroy-l" onclick="SendUtmParameter(this)">GÖNDER</a>
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-8 form-kvkk" data-animation="fadeInUp" data-animation-delay="300">
                    <div class="pretty p-svg p-curve">
                        <input type="checkbox" id="isbullet" name="isbullet" />
                        <div class="state p-success">
                            <!-- svg path -->
                            <svg class="svg svg-icon" viewBox="0 0 20 20">
                                <path d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z" style="stroke: white;fill:white;"></path>
                            </svg>
                            <label class="">Digiturk (Digital Platform Teknoloji Hizmetleri A.Ş.) tarafından  formda belirtmiş olduğum iletişim adresi üzerinden tarafıma ticari elektronik ileti gönderilmesini kabul ediyorum.</label>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

